@import  '../../../../defaults.styl'
.proyecto-inidivual-container
    display flex
    justify-content center
    .proyecto-inidivual-content
        width 1300px
        @media mediana 
            width 1000px
        @media tablet
            width 768px
        @media mobile 
            width 360px
        .arriba-proyecto
            height 650px
            position relative
            @media tablet
                height 600px
            @media mobile 
                height 450px
            .imagen-fondo-proyecto
                width 100%
                background-image: url("/assets/images/casa-nosotros.jpg");
                background-position center
                background-size cover
                background-repeat no-repeat
                height 650px
                @media tablet
                    height 600px
                @media mobile 
                    height 450px
            informacionProyecto
                position absolute
                left 50%
                top 50%
                transform translate(-50%, -50%)
                -webkit-transform translate(-50%, -50%)
        .mapa-container
            margin-top 20px
            display flex
            justify-content center
            align-items center
            .mapa-content
                width 850px
                @media tablet
                    width 768px
                @media mobile 
                    width 360px
                .contenido
                    border 2px solid rgba(220,220,220,0.9)
                    background-color #efefef
                    padding 20px
                    .titulo-contenido
                        height 30px
                        @media mobile
                            height 40px
                        h1
                            margin 0
                            font-size 25px
                            font-weight bolder
                            color #686868
                    .texto
                        background-color white
                        padding 20px
                        .algo
                            font-size 14px
                            margin 0
                            text-align justify
                            text-transform lowercase
                        .servicios-container
                            h4
                                font-size 16px
                                margin 0
                                margin-bottom 10px
                            .servicios-content
                                display flex
                                flex-direction row
                                align-items center
                                p
                                    margin 0
                                    font-size 14px
                .mapa-ubicacion
                    margin-top 20px
                    display flex
                    flex-direction row
                    justify-content space-between
                    align-items center
                    @media mobile 
                        flex-direction column
                    .mapa
                        agm-map 
                            height 350px
                        //-height 350px
                        width 411px
                        @media tablet
                            width 50%
                        @media mobile
                            width 100%
                        iframe
                            width 425px
                            @media tablet
                                width 384px
                            @media mobile
                                width 360px
                            
                    .usuario
                        border 1px solid rgba(220,220,220,0.9)
                        width 411px
                        height 350px
                        display flex
                        flex-direction column
                        justify-content center
                        align-items center
                        @media tablet
                            width 50%
                        @media mobile
                            width 100%
                        .creador-container
                            height 200px
                            width 100%
                            .creador-titulo
                                height 20px
                                padding 10px
                                h4
                                    margin 0
                                    font-size 14px
                                    font-weight bolder
                            .creador-content
                                display flex
                                flex-direction row
                                justify-content space-between
                                align-items center
                                height 180px
                                .contactos-usuario
                                    height 180px
                                    width 140px
                                    @media tablet
                                        margin-left 10px
                                    .telefono
                                        border-radius 19px
                                        margin-bottom 10px
                                        height 40px
                                        display flex
                                        flex-direction row
                                        justify-content center
                                        align-items center
                                        background-image linear-gradient(to right, #003B94 , #009A8C)
                                        p
                                            font-size 11px
                                            margin 0
                                            color white
                                            width 80%
                                        .phone
                                            color white
                                            width 10px
                                            height 10px
                                            font-size 8px
                                    .correo
                                        border-radius 19px
                                        margin-bottom 10px
                                        height 40px
                                        display flex
                                        flex-direction row
                                        justify-content center
                                        align-items center
                                        background-image linear-gradient(to right, #003B94 , #009A8C)
                                        p
                                            font-size 11px
                                            margin 0
                                            color white
                                            width 80%
                                        .mail
                                            color white
                                            width 10px
                                            height 10px
                                            font-size 8px
                                    .pagina
                                        border-radius 19px
                                        margin-bottom 10px
                                        height 40px
                                        display flex
                                        flex-direction row
                                        justify-content center
                                        align-items center
                                        background-image linear-gradient(to right, #003B94 , #009A8C)
                                        p
                                            font-size 10px
                                            margin 0
                                            color white
                                            width 80%
                                        .web
                                            color white
                                            width 10px
                                            height 10px
                                            font-size 8px
                                .info
                                    height 180px
                                    width 259px
                                    @media tablet
                                        padding 10px
                                    h3, p
                                        margin 0
                        .ubicacion-proyecto
                            height 130px
                            width 100%
                            .ubicacion-titulo
                                padding 10px
                                @media tablet
                                    margin-left 10px
                                h4
                                    margin 0
                                    font-size 14px
                                    font-weight bolder
                            .ubicacion-texto
                                padding 10px
                                p
                                    margin 0
                                    text-align justify
                                    font-size 12px
        proyectosRelacionados
            @media mobile 
                display none