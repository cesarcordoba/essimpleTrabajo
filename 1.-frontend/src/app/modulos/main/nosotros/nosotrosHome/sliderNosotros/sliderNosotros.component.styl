@import  '../../../../../../defaults.styl'

ngx-slick
	width 100%
.encabezado
	.titulo
		padding 20px
		h1
			margin 0
			color gray
			height 40px
			font-size 46px
			font-weight bolder
			@media mobile
				font-size 30px
	.texto
		margin-top 10px
		margin-bottom 40px
		padding 20px
		@media mobile
			margin-top 0px
			margin-bottom 0px
		p
			font-size 16px
			margin 0
			text-align justify
.slider
	height 235px
	display flex
	align-items center
	justify-content center
	@media tablet
		height 200px
	@media mobile
		height 108px
	.carousel
		height 235px
		display flex
		align-items center
		justify-content center
		@media tablet
			height 200px
		@media mobile
			height 108px
		.slick-list
			height 235px
			width 760px
			@media tablet
				height 200px
			@media mobile
				height 108px
			.slick-track
				height 235px
				@media tablet
					height 200px
				@media mobile
					height 108px
				.slide
					&:focus
						outline 0px
					.imagen-slider-nosotros
						width 247px
						height 215px
						@media tablet
							width 200px
							height 200px
						@media mobile
							width 108px
							height 108px
						img
							width 100%
							height 100%
		button.slick-prev
			left inherit !important
			right 99%
			top 39%
			z-index 1
			width 45px
			height 45px
			background-color #e8e8e8
			@media tablet
				right 94%
			@media mobile
				right 96%
				top 57%
				width 23px
				height 27px
			&:before
				font-family inherit
				content '‹'
				font-size 54px
				line-height 0.5
				color #afafaf
				@media mobile
					font-size 38px
		button.slick-next
			right inherit !important
			left 98%
			top 39%
			width 45px
			height 45px
			background-color #e8e8e8
			@media tablet
				right 94%
			@media mobile
				left 96%
				top 57%
				width 23px
				height 27px
			&:before
				font-family inherit
				content '›'
				font-size 54px
				line-height 0.5
				color #afafaf
				@media mobile
					font-size 38px