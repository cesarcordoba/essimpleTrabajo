@import  '../../../../../defaults.styl'
.proyectos-container
    margin-top 15px
    @media mediana 
        width 1000px
    @media tablet
        width 768px
    @media mobile 
        width 360px
.proyectos-container, .proyecto
    display flex
    flex-direction column
    justify-content center
    align-items center
    .proyecto
        flex-direction row
        width 1000px
        height 266px
        margin-bottom 30px
        background-color #efefef
        justify-content space-between
        align-items flex-start
        @media mediana
            width 880px
        @media tablet
            width 768px
            height 220px
        @media mobile 
            width 360px
            flex-direction column
            height 450px
        .imagen
            position relative
            width 300px
            height 266px
            @media tablet
                height 220px
            @media mobile
                width inherit
                height 203px
            img
                width 100%
                height 100%
            .btn-mas
                position absolute
                right 0
                bottom 0
                height 55px
                width 56px
                display flex
                justify-content center
                align-items center
                background-image linear-gradient(to right, #003B94 , #009A8C)
                cursor pointer
                @media mobile
                    height 50px
                    width 50px
                @media tablet
                    height 50px
                    width 50px
                &:focus
                    outline 0px
                h1
                    color white
                    margin 0
                    font-size 33px
        .texto-container
            width 680px
            padding 20px
            @media mobile
                width 320px
            .titulo
                h1
                    color #686868
                    font-weight bolder
                    font-size 30px
                    @media tablet
                        font-size 22px
                    @media mobile
                        font-size 22px
            .texto-content
                width 500px
                position relative
                @media mobile
                    width 320px
                .meta, .minimo, .plazo, .rendimiento, .retorno
                    height 25px
                    display flex
                    flex-direction row
                    justify-content center
                    align-items center
                    .atributo
                        p
                            font-size 12px
                            margin 0
                    .linea-atributo
                        width 100%
                        height 1px
                        background-color rgba(220,220,220,0.6)
                    .valor
                        h4
                            text-align right 
                            font-size 12px
                            margin 0
                .plazo
                    .atributo
                        width 112px
                        @media mobile
                            width 140px
                .rendimiento
                    .atributo
                        width 171px
                        @media mobile
                            width 240px
                .retorno
                    .atributo
                        width 184px
                        @media mobile
                            width 258px
        &:nth-child(1)
            margin-left 120px
            @media tablet
                margin-left inherit
            @media mobile
                margin-left inherit
        &:nth-child(2)
            flex-direction row-reverse
            margin-right 120px
            @media tablet
                margin-right inherit
            @media mobile
                margin-right inherit
                flex-direction column
            .texto-container
                display flex
                flex-direction column
                align-items flex-end