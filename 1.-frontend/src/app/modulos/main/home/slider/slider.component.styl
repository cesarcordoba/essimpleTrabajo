
@import  '../../../../../defaults.styl'

.boxshadow
	box-shadow 0 1px 3px 0 rgba(0,0,0,.2), 0 1px 1px 0 rgba(0,0,0,.14), 0 2px 1px -1px rgba(0,0,0,.12)
ngx-slick
	width 100%

.slider-principal
	.slider
		height 500px !important
		display flex
		align-items center
		@media tablet
			height 400px !important
		@media mobile
			height 250px !important
		.slick-dotted.slick-slider
			margin-bottom inherit !important
		.carousel
			height 500px
			@media tablet
				height 400px !important
			@media mobile
				height 250px !important
			.slick-list
				height 500px
				@media tablet
					height 400px !important
				@media mobile
					height 250px !important
				.slick-track
					height 500px
					@media tablet
						height 400px !important
					@media mobile
						height 250px !important
					.slide
						&:focus
							outline 0px
						.imagen-principal
							cursor pointer
							height 500px
							@media tablet
								height 400px !important
							@media mobile
								height 250px !important
							img
								width 100%
								height 100%
								
	.slick-dots
		bottom 20px
		button
			&:before
				color white
				font-size 25px
				@media tablet
					font-size 16px
				@media mobile
					font-size 12px
		.slick-active
			button
				&:before
					color white
					font-size 25px
					@media tablet
						font-size 16px
					@media mobile
						font-size 12px
	.barra-degradada-principal
		height 82px
		background-image linear-gradient(to right, #003B94 , #009A8C)
		@media tablet
			height 62px
		@media mobile
			height 42px