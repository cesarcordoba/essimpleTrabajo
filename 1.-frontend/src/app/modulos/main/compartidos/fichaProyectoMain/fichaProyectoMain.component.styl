@import  '../../../../../defaults.styl'
.ficha
    border 2px solid rgba(220,220,220,0.4)
    width 290px
    &:focus
        outline 0px
    .proyecto
        position relative
        .circulo-porcentaje
            position absolute
            border 3px solid #00838e
            border-radius 40px
            top 20px
            right 20px
            width 45px
            height 45px
            display flex
            justify-content center
            align-items center
            background-color #fff
            z-index 30
            p
                font-size 15px
                margin 0
                font-weight bolder
                background -webkit-linear-gradient(#009A8C, #003B94)
                -webkit-background-clip text
                -webkit-text-fill-color transparent
        .ubicacion
            height 50px
            display flex
            flex-direction column
            justify-content space-between
            h4
                margin 0
                font-size 14px
                margin-left 10px
                margin-top 3px
            .mat-progress-bar 
                &.mat-warn 
                    .mat-progress-bar-fill 
                        &::after 
                            background-color #00838e
                    .mat-progress-bar-buffer 
                        background-color #dff3fd
        .portada
            width 290px
            height 217px
            position relative
            img
                width 100%
                height 100%
            .btn-mas
                opacity 0
                position absolute
                right 0
                top 0
                left 0
                margin auto
                bottom 0
                height 55px
                width 56px
                display flex
                justify-content center
                align-items center
                background-image linear-gradient(to right, #003B94 , #009A8C)
                cursor pointer
                @media mobile
                    height 50px
                    width 50px
                @media tablet
                    height 50px
                    width 50px
                &:focus
                    outline 0px
                h1
                    color white
                    margin 0
                    font-size 33px
                transition(300ms, 0)
            .capita
                position absolute
                right 0
                top 0
                left 0
                margin auto
                bottom 0
                width 100%
                height 100%
                background-color black
                opacity 0
                transition(300ms, 0)
            &:hover
                cursor pointer
                .capita
                    opacity 0.4
                    transition(300ms, 0)
                    z-index 10
                .btn-mas
                    z-index 20
                    opacity 1
                    transition(300ms, 0)
        .titulo
            display flex
            height 50px
            justify-content center
            align-items center
            background-color rgba(220,220,220,0.4)
            cursor pointer
            &:focus
                outline 0px
            h3
                font-size 15px
                margin 0
                transition(250ms, 0)
            &:hover
                h3
                    transition(250ms, 0)
                    transform scale(1.3)
                
        .texto-container
            padding 20px
            .texto-content
                width 248px
                position relative
                .meta, .minimo, .plazo, .rendimiento, .retorno
                    height 17px
                    display flex
                    flex-direction row
                    justify-content center
                    align-items center
                    .atributo
                        p
                            font-size 10px
                            margin 0
                    .linea-atributo
                        width 100%
                        height 1px
                        background-color rgba(220,220,220,0.6)
                    .valor
                        h4
                            text-align right 
                            font-size 10px
                            margin 0
                .plazo
                    .atributo
                        width 146px
                .rendimiento
                    .atributo
                        width 241px
                .retorno
                    .atributo
                        width 270px