
@import  '../../../../../../defaults.styl'
ngx-slick
	width 100%

.slider-inversionista-container
	height 500px
	.slider-inversionista-container
		height 500px
		display flex
		flex-direction column
		align-items center
		justify-content center
		.slider
			height 500px
			width 960px
			display flex
			align-items center
			justify-content center
			@media mediana 
				width 1000px
			@media tablet
				width 768px
			@media mobile 
				width 340px
			.carousel
				height 500px
				display flex
				align-items center
				justify-content center
				.slick-list
					height 500px
					width 960px
					@media mediana 
						width 1000px
					@media tablet
						width 768px
					@media mobile 
						width 340px
					.slick-track
						height 500px
						.slide
							width 305px !important
							@media mobile
								width 300px !important
							&:focus
								outline 0px
				button.slick-prev
					left inherit !important
					right 99%
					top 39%
					z-index 1
					width 45px
					height 45px
					background-color #e8e8e8
					@media mobile
						right 88%
					&:before
						font-family inherit
						content '‹'
						font-size 54px
						line-height 0.5
						color #afafaf
				button.slick-next
					right inherit !important
					left 98%
					top 39%
					width 45px
					height 45px
					background-color #e8e8e8
					@media mobile
						left 88%
					&:before
						font-family inherit
						content '›'
						font-size 54px
						line-height 0.5
						color #afafaf
