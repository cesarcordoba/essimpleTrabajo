@import  '../../../../defaults.styl'
.contratista-container
    display flex
    justify-content center
    .contratista-content
        display flex
        flex-direction row
        justify-content center
        min-height 80vh
        width 1300px
        @media mediana
            flex-direction column
            width 1000px
        @media tablet
            flex-direction column
            width 768px
        @media mobile
            flex-direction column
            width 340px
        .contenedor-izquierdo
            width 50%
            display flex
            flex-direction column
            align-items center
            padding 10px
            @media mediana
                width 98%
            @media tablet
                width 98%
            @media mobile
                width 98%
            .datos-usuario
                width 100%
                background-color white
                border-radius 15px
                border 1px solid rgba(190,190,190,04)
                .barra-editar-ususario-contratista
                    border-top-left-radius 15px
                    border-top-right-radius 15px
                    background-color #597cff
                    position relative
                    height 37px
                    .titulo
                        position absolute
                        color #fff
                        top 0
                        left 0px
                        display flex
                        height 100%
                        justify-content center
                        align-items center
                        padding 2px
                        h3
                            font-size 16px
                            margin 0 
                    .btn-usuario-editar
                        position absolute
                        color white
                        top 0
                        right 0
                .usuario-contratista
                    .antes-edicion
                        padding 20px
                        .nombre, .apellido, .correo
                            display flex
                            flex-direction row
                            justify-content space-between
                            align-items center
                            height 30px
                            h4, p
                                margin 0
                                font-size 18px
                                @media mobile
                                    font-size 15px
                            p
                                width 100%
                                margin-left 10px
                    .edicion
                        padding 20px
                        .fomulario-usuarios
                            display flex
                            justify-content center
                            flex-direction column
                        .contenedor-guardar-usuario
                            .btn-guardar-usuario
                                background-color #46ad46
                                span
                                    color white
                                    font-size 14px
                                    font-weight 800
            .datos.contratista
                margin-top 30px
                width 100%
                background-color white
                border-radius 15px
                border 1px solid rgba(190,190,190,04)
                .barra-editar-contratista
                    border-top-left-radius 15px
                    border-top-right-radius 15px
                    background-color #597cff
                    position relative
                    height 37px
                    .titulo
                        position absolute
                        color #fff
                        top 0
                        left 0px
                        display flex
                        height 100%
                        justify-content center
                        align-items center
                        padding 2px
                        h3
                            font-size 16px
                            margin 0 
                    .btn-contratista-editar
                        position absolute
                        color white
                        top 0
                        right 0
                .contratista
                    .antes-edicion
                        padding 20px
                        .direccion, .telefono, .pWeb,  .casasProm, .costoProm, .volumen
                            display flex
                            flex-direction row
                            justify-content space-between
                            align-items center
                            height 30px
                            h4, p
                                margin 0
                                font-size 18px
                                @media mobile
                                    font-size 15px
                            p
                                width 100%
                                margin-left 10px
                            h4
                                width 190px
                    .edicion
                        padding 20px
                        .formulario-contratistas
                            display flex
                            justify-content center
                            flex-direction column
                        .contenedor-guardar-contratista
                            .btn-guardar-contratista
                                background-color #46ad46
                                span
                                    color white
                                    font-size 14px
                                    font-weight 800
        .contenedor-derecho
            width 50%
            display flex
            flex-direction column
            align-items center
            padding 10px
            @media mediana
                width 98%
            @media tablet
                width 98%
            @media mobile
                width 98%
            .foto-perfil
                width 100%
                background-color white
                border-radius 15px
                border 1px solid rgba(190,190,190,04)
