                    background-color #597cff
                    position relative
                    height 37px
                    .btn-editar-foto
                        position absolute
                        color white
                        top 0
                        right 0
                .foto-contratista
                    display flex
                    justify-content center
                    align-items center
                    .imagen-container
                        .imagen
                            width 200px
                            height 200px
                            border-radius 128px
                            overflow hidden
                            img
                                width 100%
                                height 100%
                        h4
                            margin 0
                            font-size 18px
                            text-align center
                    .inputs
                        padding 20px
                        .btn-dropify
                            background-color #46ad46
                            margin-top 10px
                            span
                                color white
                                font-size 14px
                                font-weight 800
