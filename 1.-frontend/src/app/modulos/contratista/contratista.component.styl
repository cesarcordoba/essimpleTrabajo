@import  '../../../defaults.styl'

.contenido
    min-height 100vh
    
.contenedor
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    h1
        text-align: center
        color white
    .iconoMenu, .btn-usuario
        color white
    .nav-toolbar
        margin: 0% auto
        text-align: center;

.mat-toolbar 
    background-image linear-gradient(to right, #003B94 , #009A8C) !important
    background inherit

.footer
    height 60px !important
    background-image linear-gradient(to right, #003B94 , #009A8C) !important
    display flex
    flex-direction row
    justify-content space-around
    align-items center
    h1
        margin 0
        color white
        font-size 12px